<div class="container">

    <div class="jumbotron text-center bg-primary text-white">
        <h1 class="display-4" id="app-title">Burgers' Burger <img src="/assets/img/cheeseburger.png"></h1>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card border border-primary">
                <div class="card-header bg-primary text-white">
                    What burger would you like?
                </div>

                <div class="card-body">
                    <form class="add-form">
                        <div class="form-group">
                            <label for="burger">Your burger:</label>
                            <input type="text" class="form-control" id="burger-form" placeholder="">
                        </div>
                        <button class="btn btn-primary" type="submit">Add it</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="row mt-4">
        <div class="col-md-6 mt-4">
            <div class="card border border-primary">
                <div class="card-header bg-primary text-white">
                    Burgers
                </div>

                <div class="card-body">
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devour=false}}
                    {{/unless}}
                    {{/each}}
                </div>
            </div>
        </div>

        <div class="col-md-6 mt-4">
            <div class="card devoured-card">
                <div class="card-header text-white" id="devoured-card-header">
                    Devoured burgers
                </div>

                <div class="card-body">
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-devoured devour=true}}
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>